@model Product



<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />

	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-4 row">
				<div class="col-12 pb-2">
					<h2 class="text-primary">Delete Product</h2>
					<hr />
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Title"></label>
					<input asp-for="@Model.Title" disabled class="form-control" />					
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Description"></label>
					<input asp-for="@Model.Description" diabled class="form-control">					
				</div>
				<div class="mb-3">
					<label asp-for="@Model.ISBN"></label>
					<input asp-for="@Model.ISBN" disabled class="form-control" />					
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Author"></label>
					<input asp-for="@Model.Author" disabled class="form-control" />					
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Price"></label>
					<input asp-for="@Model.Price" class="form-control" />					
				</div>
				<div class="col-12">
					<button type="submit" class="btn btn-primary" style="width:150px">Delete</button>				
					<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
						Back to List
					</a>
				</div>

			</div>
		</div>
		<div class="col-2 pt-4">
			<img src="@Model.ImageUrl"
				 width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
		</div>
	</div>

</form>
