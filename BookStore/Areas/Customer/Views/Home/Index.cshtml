@model IEnumerable<Product>


<div class="row pb-3">
    @if (Model.Count() == 0)
    {
        <div class="container">
            <h2>Sorry, Your search not found</h2>
        </div>
    }
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6 d-flex">
            <div class="row p-2">
                <div class="card-group">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" alt="book">
                        <div class="card-body">
                            <div class="pl-1">
                                <h5 class="card-title">@product.Title</h5>
                                <p class="card-text"><b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Price: <b>@product.Price.ToString("c")</b></p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>